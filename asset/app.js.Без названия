    $('.image-with-text-overlay-section .btn-scroll-down').click(function(e){
        var target;
        e.stopPropagation();
        if ($('body').hasClass('index')){
            $target = $(this).parents('.shopify-section').next();
        } else {
            $target = $(this).parents('.image-with-text-overlay-section').nextAll('div').first();
        }
        goToPos($target);
    });

